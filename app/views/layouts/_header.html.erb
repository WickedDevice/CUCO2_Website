<% #This code should probably not be right here
if current_user.nil?
	user_button = link_to("Login", { :controller => "sessions", :action => "new" })
	ul_class = "nav navbar-right navbar-nav"
else
	user_button = link_to(current_user.name, current_user)
	ul_class = "nav navbar-collapse collapse navbar-right navbar-nav"
end %>

<header class="navbar navbar-fixed-top navbar-custom">
	<div class="navbar-inner">
		<div class="container">
			<div class="navbar-header">

				<div style="display:inline-block; padding:6px; margin:6px">
					<%= link_to image_tag("wicked_device_logo.jpg", height: "25"), "http://wickeddevice.com", style: "float:left" %>
					<%= link_to "Home", root_path, id: "logo", style: "padding-left:10px" %>
				</div>
				<% unless current_user.nil? %>
				<button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<% end %>
			</div>
			<div>
				<ul class="<%= ul_class%>" >
					<% unless current_user.nil? %>
					<li><%= link_to "Sensors", devices_path %></li>
					<li><%= link_to "Experiments", experiments_path %></li>
					<% end %>
					<li class="divider-vertical"></li>
					<li style="font-size:120%"><%= user_button %>
				</ul>
			</div>
		</div>
	</div>
</header>