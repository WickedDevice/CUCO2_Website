<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path, , html: {:class => "centered"}) do |f| %>

<div class="field">
	<%= f.label :name, "Username" %><br>
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :password %><br>
	<%= f.password_field :password %>
</div>

<div class="actions">
	<%= f.submit "Login" %>
</div>
<% end %>