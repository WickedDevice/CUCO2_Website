<% provide :title, (@user == current_user) ? "Dashboard" : "User: " + @user.name %>


<div class="container-fluid">
	<div class="row">
		<p>View your sensors and recent experiments here.</p>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<%= render "devices_column" %>

		</div>
		<div class="col-sm-6">
			<%= render "experiments_column" %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-3">
			<%= link_to "Download all data as CSV", sensor_data_path(:format =>'csv') %>
		</div>
		<div class="col-sm-2 col-sm-offset-7">
			<%= link_to "Change password", edit_user_path(@user) %>
		</div>
	</div>

</div>